<p id="notice"><%= notice %></p>

<h1>Listing Services</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.price %></td>
        <td><%= service.description %></td>
        <td> <%= link_to "show", service %>
       <% if can? :update, service %>
            <%= link_to "Edit", edit_service_path(service) %>
         <% end %>
         </td>

        <td>
        <% if can? :destroy, @service %>
        <%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @service %>
<%= link_to 'New Service', new_service_path %>
<% end %>