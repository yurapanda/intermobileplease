<p id="notice"><%= notice %></p>

<h1>Listing Car Models</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Car brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_models.each do |car_model| %>
      <tr>
        <td><%= car_model.name %></td>
        <td><%= car_model.car_brand.name %></td>
         <% if can? :update, @car_model %>
            <%= link_to "Edit", edit_car_model_path(@car_model) %>
         <% end %>
         </td>

        <td>
        <% if can? :destroy, @car_model %>
        <%= link_to 'Destroy', car_model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

